<?php
	$connexion = NULL;

	// connexion à la BD
	function connectBD() {
		global $connexion;
		$connexion = mysqli_connect(localhost, root, , morpion);
		if (mysqli_connect_errno()) {
		    printf("Échec de la connexion : %s\n", mysqli_connect_error());
		    exit();
		}
		mysqli_query($connexion, 'SET NAMES UTF8'); // requete pour avoir les noms en UTF8
	}

	function deconnectBD() {
		global $connexion;
		mysqli_close($connexion);
	}
	
	function ajoutteam() {
	connectBD();
	$sql = "INSERT INTO equipes(eqp_nom,eqp_couleur,eqp_datecrea,eqp_format) VALUES ('$eqpname','$eqpcolor',$eqpdate,$eqpformat)";
	mysql_query ($sql) or die ('Erreur SQL !'.$sql.'<br />'.mysql_error());
	deconnectBD();)
	}

?>
